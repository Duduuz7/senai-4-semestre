@{
    ViewData["Title"] = "Principal";
}

@if (ViewBag.NomeProfessor == null)
{
    <a asp-controller="Login"></a>
}
else
{
    <div class="d-flex mx-3 justify-content-between my-5">
        @* título *@
        <h4 class="fw-bold">Sua lista de turmas</h4>

        @* cadastrar turma *@
        <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#cadastrarTurma">
            Cadastrar Turma
        </button>
    </div>

    @* tabela *@
    <table class="table">
        <thead>
            <tr class="">
                <th>Número</th>
                <th>Turma</th>
                <th>Opções</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var turma in Model)
            {
                <tr>
                    <td>@turma.TurmaId</td>
                    <td>@turma.Nome</td>
                    <td>
                        <div style="display:flex">

                            @{
                                var name = "excluirTurma" + turma.TurmaId;
                            }
                                    
                            <div class="modal" tabindex="-1" id="@name">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h2 class="modal-title">Excluir turma</h2>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>

                                        <form asp-controller="Professor" asp-action="ExcluirTurma">
                                            <p class="modal-body">Confimar exclusão da turma permanentemente?</p>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                <input type="hidden" name="turmaId" value="@turma.TurmaId" />
                                                <button type="submit" class="btn btn-primary">Confirmar</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <div class="modal" tabindex="-1" id="erroExcluir">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h2 class="modal-title">Excluir turma</h2>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>

                                        <form asp-controller="Professor" asp-action="ExcluirTurma">
                                            <p class="modal-body">
                                                A turma não pode ser excluída, pois a mesma possuí
                                                atividades anexadas
                                            </p>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            @if(turma.Atividades.Count == 0)
                            {
                                <button type="Submit" class="text-danger bg-white btn-link border-0" data-bs-toggle="modal" data-bs-target="#@name">Excluir</button>
                            } else
                            {
                                <button type="Submit" class="text-danger bg-white btn-link border-0" data-bs-toggle="modal" data-bs-target="#erroExcluir">Excluir</button>
                            }

                            <form asp-controller="Atividade" asp-action="Index" asp-route-turmaId="@turma.TurmaId">
                                <input type="hidden" name="turmaId" value="@turma.TurmaId" />
                                <button type="submit" class="text-success btn-link text-success bg-white success-underline border-0">Visualizar</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>


    @* Código do corpo modal *@
    <div class="modal" tabindex="-1" id="cadastrarTurma">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Cadastrar turma</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <form asp-controller="Professor" asp-action="CadastrarTurma">
                    <div class="modal-body">
                        <label class="form-label">Nome da turma</label>
                        <input type="text" name="nomeTurma" class="form-control" required />
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    

}