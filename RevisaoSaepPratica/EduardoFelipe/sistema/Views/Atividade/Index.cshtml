@{
    ViewData["Title"] = "Atividades";
}

@* cabecalho *@

<div style="display:flex">
    <h3>@ViewBag.NomeProfessor</h3>

    <form asp-controller="Login" asp-action="Logout">
        <button type="submit">Sair</button>
    </form>
</div>

@* cadastrar turma *@

<form asp-controller="Professor" asp-action="CadastrarTurma">
    <label>Nome da turma</label>
    <input type="text" name="nomeTurma" placeholder="Nome" required />
    <button type="submit">Cadastrar Turma</button>
</form>


@* nome turma  *@
<h4>Turma: </h4>

@* tabela *@
<table>
    <thead>
        <tr>
            <th>Número</th>
            <th>Nome da atividade</th>

        </tr>
    </thead>

    <tbody>
        @foreach (var atividade in Model)
        {
            <tr>
                <td>@atividade.AtividadeId</td>
                <td>@atividade.Descricao</td>
            </tr>
        }
    </tbody>
</table>

